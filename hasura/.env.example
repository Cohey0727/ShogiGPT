# Hasura GraphQL Engine Environment Variables

# Hasura Admin Secret (Change this in production!)
HASURA_GRAPHQL_ADMIN_SECRET=shogi_password

# Database Connection
POSTGRES_USER=shogi_user
POSTGRES_PASSWORD=shogi_password
POSTGRES_DB=shogi_db
HASURA_GRAPHQL_DATABASE_URL=postgresql://shogi_user:shogi_password@postgres:5432/shogi_db

# Hasura Port
HASURA_PORT=7777

# Enable Hasura Console (set to false in production)
HASURA_GRAPHQL_ENABLE_CONSOLE=false

# Dev Mode (set to false in production)
HASURA_GRAPHQL_DEV_MODE=true

# Unauthorized role for public access
HASURA_GRAPHQL_UNAUTHORIZED_ROLE=anonymous

# Disable telemetry
HASURA_GRAPHQL_ENABLE_TELEMETRY=false

# Logging
HASURA_GRAPHQL_ENABLED_LOG_TYPES=startup, http-log, webhook-log, websocket-log, query-log

# Experimental Features
HASURA_GRAPHQL_EXPERIMENTAL_FEATURES=naming_convention
