{
  "name": "@shogigpt/server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,graphql --exec 'bun src/index.ts'",
    "start": "bun src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "tsc -b --noEmit && eslint . && prettier --write . --log-level warn",
    "codegen": "bunx prisma generate && bun run codegen:graphql && bun run codegen:shogi",
    "codegen:graphql": "graphql-codegen --config codegen.yml",
    "codegen:shogi": "openapi-ts -i openapi.json -o src/generated/shogi-ai -c @hey-api/client-fetch",
    "migrate": "prisma migrate dev",
    "migrate:create": "prisma migrate dev --create-only",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.30",
    "@hono/graphql-server": "^0.7.0",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "hono": "^4.10.7",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.6",
    "@graphql-codegen/typescript-resolvers": "^5.1.4",
    "@graphql-tools/graphql-file-loader": "^8.1.8",
    "@hey-api/openapi-ts": "^0.88.0",
    "@types/bun": "^1.3.3",
    "@types/pg": "^8.15.6",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "prettier": "3.7.3",
    "prisma": "^7.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
