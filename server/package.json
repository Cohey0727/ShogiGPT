{
  "name": "@shogigpt/server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "tsc -b --noEmit && eslint .",
    "codegen": "bun run codegen:graphql && bun run codegen:shogi",
    "codegen:graphql": "graphql-codegen --config codegen.yml",
    "codegen:shogi": "openapi-ts -i openapi.json -o src/generated/shogi-api -c @hey-api/client-fetch",
    "migrate": "prisma migrate dev",
    "migrate:create": "prisma migrate dev --create-only",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.29",
    "@hono/graphql-server": "^0.7.0",
    "@prisma/client": "^6.19.0",
    "graphql": "^16.12.0",
    "hono": "^4.10.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@graphql-codegen/cli": "^6.0.2",
    "@graphql-codegen/typescript": "^5.0.4",
    "@graphql-codegen/typescript-resolvers": "^5.1.2",
    "@graphql-tools/graphql-file-loader": "^8.1.6",
    "@hey-api/openapi-ts": "^0.87.5",
    "@types/bun": "^1.3.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prisma": "^6.19.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
