generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/// 対局情報
model Match {
  id          String        @id @default(cuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  /// 対局状況
  status      MatchStatus   @default(ONGOING)
  /// 先手のプレイヤー名
  playerSente String?
  /// 後手のプレイヤー名
  playerGote  String?
  /// 先手のプレイヤータイプ
  senteType   PlayerType    @default(HUMAN)
  /// 後手のプレイヤータイプ
  goteType    PlayerType    @default(HUMAN)
  messages    ChatMessage[]
  states      MatchState[]

  @@index([createdAt])
  @@index([status])
  @@map("matches")
}

/// 局面情報（ある時点での盤面状態と、そこに至った指し手）
model MatchState {
  createdAt     DateTime     @default(now())
  /// 紐づく対局ID
  matchId       String
  /// 局面番号（何手目か、0から開始。0は初期局面）
  index         Int
  /// この局面に至った指し手表記（USI形式、例: "7g7f"）
  /// 初期局面（index=0）の場合は "0000"（USI標準のパス/無効手表記）
  moveNotation  String
  /// 盤面（SFEN形式）
  sfen          String
  /// 消費時間（秒、オプション）
  thinkingTime  Int?
  /// 評価結果ID（オプション）
  evaluationId  String?
  match         Match        @relation(fields: [matchId], references: [id], onDelete: Cascade)
  evaluation    Evaluation?  @relation(fields: [evaluationId], references: [id], onDelete: SetNull)

  @@id([matchId, index])
  @@index([evaluationId])
  @@map("match_states")
}

/// チャットメッセージ
model ChatMessage {
  id        String      @id @default(cuid())
  createdAt DateTime    @default(now())
  /// 紐づく対局ID
  matchId   String
  /// メッセージの送信者ロール
  role      MessageRole
  /// メッセージコンテンツ（JSON形式、Markdownや候補手などを含む配列）
  contents  Json
  /// 入力途中かどうか
  isPartial Boolean     @default(false)
  /// メタデータ（JSON形式、AI推論データなど）
  metadata  String?
  match     Match       @relation(fields: [matchId], references: [id], onDelete: Cascade)

  @@index([matchId])
  @@index([createdAt])
  @@map("chat_messages")
}

/// 対局状況
enum MatchStatus {
  ONGOING
  COMPLETED
  ABANDONED
}

/// プレイヤータイプ
enum PlayerType {
  HUMAN
  AI
}

/// メッセージの送信者ロール
enum MessageRole {
  USER
  ASSISTANT
}

/// 評価結果キャッシュ
model Evaluation {
  /// 評価結果ID
  id          String       @id @default(cuid())
  /// 作成日時
  createdAt   DateTime     @default(now())
  /// 更新日時
  updatedAt   DateTime     @updatedAt
  /// 局面（SFEN形式）
  sfen        String
  /// 使用したエンジン名
  engineName  String
  /// 候補手のバリエーション（JSON形式）
  /// 形式: [{ "move": "7g7f", "score": 100, "pv": ["7g7f", "3c3d"], ... }, ...]
  variations  Json
  matchStates MatchState[]

  @@unique([sfen, engineName])
  @@index([sfen])
  @@index([engineName])
  @@map("evaluations")
}
